# PawfectMatch Environment Configuration
# Copy this file to .env.local and fill in the values

# ===================================
# Application
# ===================================
NODE_ENV=development
VITE_APP_NAME=PawfectMatch
VITE_APP_VERSION=1.0.0

# ===================================
# API Configuration
# ===================================
# Base URL for API endpoints
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# WebSocket URL
VITE_WS_URL=ws://localhost:3000

# ===================================
# Authentication
# ===================================
# JWT Configuration
VITE_JWT_SECRET=your-secret-key-change-in-production
VITE_JWT_EXPIRY=7d
VITE_REFRESH_TOKEN_EXPIRY=30d

# OAuth (GitHub via Spark)
# Handled by @github/spark - no additional config needed

# ===================================
# Feature Flags
# ===================================
VITE_ENABLE_STORIES=true
VITE_ENABLE_VIDEO_CHAT=true
VITE_ENABLE_VOICE_MESSAGES=true
VITE_ENABLE_AI_SUGGESTIONS=true
VITE_ENABLE_ADVANCED_FILTERS=true
VITE_ENABLE_PAYMENTS=false

# ===================================
# Maps & Location
# ===================================
# Choose provider: mapbox | google
VITE_MAP_PROVIDER=mapbox

# Mapbox
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Google Maps
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Location Privacy
VITE_LOCATION_PRECISION=approximate
VITE_LOCATION_SNAP_GRID_SIZE=1000

# ===================================
# Media & CDN
# ===================================
# CDN Provider: cloudinary | s3 | local
VITE_CDN_PROVIDER=local
VITE_CDN_BASE_URL=https://cdn.pawfectmatch.com

# Cloudinary
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# AWS S3
VITE_AWS_S3_BUCKET=pawfectmatch-media
VITE_AWS_S3_REGION=us-east-1
VITE_AWS_ACCESS_KEY_ID=your-access-key
VITE_AWS_SECRET_ACCESS_KEY=your-secret-key

# Upload Limits
VITE_MAX_IMAGE_SIZE=10485760
VITE_MAX_VIDEO_SIZE=104857600
VITE_MAX_IMAGES_PER_POST=10
VITE_MAX_IMAGES_PER_PROFILE=6

# Image Variants
VITE_IMAGE_SIZES=320,960,1920
VITE_IMAGE_FORMAT=webp

# ===================================
# Push Notifications
# ===================================
# APNs (Apple)
VITE_APNS_KEY_ID=your-key-id
VITE_APNS_TEAM_ID=your-team-id
VITE_APNS_BUNDLE_ID=com.pawfectmatch.app

# FCM (Firebase)
VITE_FCM_SERVER_KEY=your-fcm-server-key
VITE_FCM_SENDER_ID=your-sender-id

# ===================================
# Payments (if enabled)
# ===================================
# Stripe
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
VITE_STRIPE_WEBHOOK_SECRET=your-webhook-secret

# App Store / Play Store
VITE_APPLE_SHARED_SECRET=your-apple-shared-secret
VITE_GOOGLE_SERVICE_ACCOUNT=your-service-account-json

# ===================================
# Analytics & Monitoring
# ===================================
# Error Tracking (Sentry)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
VITE_ENABLE_ANALYTICS=false
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# ===================================
# Rate Limiting
# ===================================
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=60000
VITE_RATE_LIMIT_MESSAGE_BURST=10

# ===================================
# Security
# ===================================
# CORS
VITE_CORS_ORIGIN=http://localhost:5173
VITE_CORS_CREDENTIALS=true

# CSP
VITE_CSP_ENABLED=true

# Secrets Rotation
VITE_SECRET_ROTATION_DAYS=90

# ===================================
# Observability
# ===================================
# Logging
VITE_LOG_LEVEL=info
VITE_LOG_RETENTION_DAYS=14

# Metrics
VITE_METRICS_RETENTION_DAYS=90

# Health Check
VITE_HEALTH_CHECK_INTERVAL=30000

# ===================================
# Quality Gates
# ===================================
# Coverage Thresholds
VITE_COVERAGE_LINES=90
VITE_COVERAGE_BRANCHES=85
VITE_COVERAGE_FUNCTIONS=90
VITE_COVERAGE_STATEMENTS=90

# Complexity Limits
VITE_COMPLEXITY_CYCLOMATIC=10
VITE_COMPLEXITY_COGNITIVE=15
VITE_COMPLEXITY_FUNCTION_LENGTH=50

# Performance Budgets
VITE_PERF_LCP_MS=2500
VITE_PERF_TTI_MS=3500
VITE_PERF_FRAME_TIME_MS=16

# ===================================
# Development Tools
# ===================================
# Debug Mode
VITE_DEBUG=false
VITE_DEBUG_REDUX=false

# Mock Data
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY_MS=500

# Seeding
VITE_AUTO_SEED=true
VITE_SEED_USERS=50
VITE_SEED_PETS=100

# ===================================
# i18n
# ===================================
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,bg
VITE_FALLBACK_LOCALE=en

# ===================================
# Database (Future - Backend)
# ===================================
# DATABASE_URL=postgresql://user:password@localhost:5432/pawfectmatch
# DATABASE_POOL_SIZE=10
# DATABASE_SSL=true

# Redis (for session/cache)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# ===================================
# Background Jobs (Future)
# ===================================
# WORKER_CONCURRENCY=5
# JOB_RETRY_ATTEMPTS=3
# JOB_RETRY_BACKOFF=exponential

# ===================================
# Email (Future)
# ===================================
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-key
# EMAIL_FROM=noreply@pawfectmatch.com

# ===================================
# KYC Provider (Future)
# ===================================
# KYC_PROVIDER=onfido
# KYC_API_KEY=your-kyc-api-key
# KYC_WEBHOOK_TOKEN=your-webhook-token

# ===================================
# Admin
# ===================================
# Admin User IDs (comma-separated)
VITE_ADMIN_USER_IDS=user-1,user-2

# Moderator User IDs (comma-separated)
VITE_MODERATOR_USER_IDS=user-3,user-4
