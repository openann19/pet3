{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "react",
      "react-dom"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@design-system/*": [
        "./design-system/*"
      ],
      "@petspark/chat-core": [
        "../../packages/chat-core/src/index.ts"
      ],
      "@petspark/config": [
        "../../packages/config/src/index.ts"
      ],
      "@petspark/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@petspark/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@petspark/spec-core": [
        "../../packages/spec-core/src/index.ts"
      ],
      "@petspark/motion": [
        "../../packages/motion/src/index.ts"
      ],
      "@petspark/motion/*": [
        "../../packages/motion/src/*"
      ]
    },
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "customConditions": []
  },
  "include": [
    "src",
    "src/test/utils/test-helpers.tsx",
    "src/test/vitest.d.ts",
    "src/types/**/*.d.ts",
    "*.d.ts",
    "*.ts",
    "vite.config.ts",
    "design-system/**/*.ts",
    "design-system/**/*.tsx",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "storybook-static",
    "src/lib/kyc-native.ts",
    "src/components/ChatWindowNew.tsx",
    "**/*.stories.tsx"
  ]
}