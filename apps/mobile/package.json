{
  "name": "petspark-mobile",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "verify:ultra": "node scripts/verify-ultra-chatfx.mjs",
    "verify:parity": "node scripts/verify-parity.mjs",
    "verify:budget": "node scripts/verify-budget.mjs",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "test:run": "vitest run --passWithNoTests",
    "ci": "pnpm typecheck && pnpm lint && pnpm test:run && pnpm verify:ultra && pnpm verify:parity && pnpm verify:budget",
    "build:eas": "eas build --platform all",
    "build:eas:ios": "eas build --platform ios",
    "build:eas:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android"
  },
  "dependencies": {
    "@petspark/shared": "workspace:*",
    "@react-native-async-storage/async-storage": "^2.1.0",
